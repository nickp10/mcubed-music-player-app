<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="AboutLabel" parent="@android:style/TextAppearance">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="AboutText" parent="@android:style/TextAppearance">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginTop">10dp</item>
	</style>
	<style name="ErrorLabel" parent="@android:style/TextAppearance">
		<item name="android:textColor">#FF0000</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="MediaFileDetailLabel" parent="@android:style/TextAppearance.DialogWindowTitle">
		<item name="android:textSize">18sp</item>
	</style>
	<style name="MediaFileGroupLabel" parent="@style/MediaFileDetailLabel">
		<item name="android:background">@drawable/media_header_background</item>
	</style>
	<style name="ProgressLabel" parent="@android:style/TextAppearance">
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">2</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">2</item>
		<item name="android:textColor">#CCCCCC</item>
