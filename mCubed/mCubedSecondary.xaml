						<ItemsControl ItemsSource="{Binding}" Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type ScrollViewer}}, Path=ViewportWidth}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Expander Cursor="Hand">
										<Expander.Header>
											<Underline>
												<TextBlock Text="{Binding Title}"/>
											</Underline>
										</Expander.Header>
