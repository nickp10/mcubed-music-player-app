									<DataTemplate>
										<Grid Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type ScrollViewer}}, Path=ViewportWidth}" Margin="0,10">
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="Auto" SharedSizeGroup="Project"/>
												<ColumnDefinition Width="50"/>
												<ColumnDefinition Width="*"/>
											</Grid.ColumnDefinitions>
											<TextBlock Text="{Binding Project}"/>
											<TextBlock Grid.Column="2" TextWrapping="Wrap">
												<TextBlock Text="{Binding Author}"/>
												<LineBreak/>
												<TextBlock Text="{Binding Version}"/>
												<LineBreak/>
												<Hyperlink NavigateUri="{Binding URL}" RequestNavigate="OnHyperlinkClicked">
													<TextBlock Text="{Binding URL}"/>
												</Hyperlink>
											</TextBlock>
										</Grid>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</ScrollViewer>
					</Grid>
