<Window x:Class="mCubed.mCubedSampler"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="M³ Sampler" Height="300" Width="300">
    <StackPanel VerticalAlignment="Center">
        <MediaElement x:Name="media" LoadedBehavior="Manual" Visibility="Collapsed"/>
        <WrapPanel>
            <TextBlock Text="Start Time: "/>
            <TextBox Width="50" Height="25" x:Name="startTime" TextChanged="playbackTime_TextChanged"/>
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text="End Time: "/>
            <TextBox Width="50" Height="25" x:Name="endTime" TextChanged="playbackTime_TextChanged"/>
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text="Length: "/>
            <TextBlock x:Name="length"/>
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text="Playback Length: "/>
            <TextBlock x:Name="playbackLength"/>
        </WrapPanel>
        <WrapPanel>
            <Button Content="Play" Width="50" Height="25" Click="buttonMediaAction_Click" x:Name="buttonPlay"/>
            <Button Content="Stop" Width="50" Height="25" Click="buttonMediaAction_Click" x:Name="buttonStop"/>
        </WrapPanel>
    </StackPanel>
</Window>
